{
  "compilerOptions": {
      "lib": ["es5", "es6"],
      "skipLibCheck": true,
      "target": "ES2017",
      // "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
